---
// Numbered sub-navigation for projects
const { currentPath } = Astro.props;

const projects = [
  { n: 1, title: 'BidLevel', path: '/portfolio/bidlevel' },
  { n: 2, title: 'Cecil.earth', path: '/portfolio/cecil-earth' },
  { n: 3, title: 'Hatch', path: '/portfolio/hatch' },
  { n: 4, title: 'FreshBooks', path: '/portfolio/freshbooks' },
  // Innovation and Later hidden from nav
];

function isActive(path: string, current: string) {
  return current.startsWith(path);
}
---

<nav class="project-sub-nav" aria-label="Project navigation">
  <ul class="subnav-list">
    {projects.map((item) => (
      <li class="subnav-item">
        <span class="subnav-number">{item.n}</span>
        <a
          href={item.path}
          class={`subnav-link ${isActive(item.path, currentPath) ? 'active' : ''}`}
          aria-current={isActive(item.path, currentPath) ? 'page' : undefined}
        >
          {item.title}
        </a>
      </li>
    ))}
  </ul>
</nav>
